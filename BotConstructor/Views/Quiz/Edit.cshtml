@model BotConstructor.Web.Models.Quiz.QuizEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Quiz - @Model.Name</h3>
<hr />
<form asp-action="Edit" asp-controller="Quiz" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <input asp-for="BotId" type="hidden" />
    <div class="form-group row">
        <label class="col-form-label col-2">Name:</label>
        <div class="col-10">
            <input asp-for="Name" class="form-control" type="text" />
        </div>
    </div>
    <div>
        <button class="btn btn-success">Save</button>
        <a asp-action="List" asp-controller="Quiz" asp-route-botId="@Model.BotId" class="btn btn-link">Cancel</a>
    </div>
</form>

<h5 class="d-flex justify-content-between mt-2">
    Quiz Steps
    <a asp-action="CreateStep" asp-controller="Quiz" asp-route-quizId="@Model.Id" class="btn btn-success btn-sm">+</a>
</h5>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Step Id</td>
            <td>Step Name</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var step in Model.Steps)
        {
            <tr>
                <td>@step.Id</td>
                <td><a asp-action="EditStep" asp-controller="Quiz" asp-route-id="@step.Id">@step.Name</a></td>
                <td><a asp-action="DeleteStep" asp-controller="Quiz" asp-route-id="@step.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
