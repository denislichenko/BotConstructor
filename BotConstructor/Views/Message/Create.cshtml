@model BotConstructor.Web.Models.Message.MessageViewModel
@{
    ViewData["Title"] = "Create";
}

<h3>Create new message</h3>
<hr />
<form asp-action="Create" asp-controller="Message" method="post">
    <input asp-for="BotId" type="hidden" />
    <div class="row">
        <div class="form-group col-6 row">
            <label class="col-form-label col-form-label-sm col-2">Input</label>
            <div class="col-10">
                <input asp-for="InputMessage" type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="form-group col-6 row">
            <label class="col-form-label col-form-label-sm col-2">Output</label>
            <div class="col-10">
                <input asp-for="OutputMessage" type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-12">
            <button class="btn btn-success">Create</button>
            <a asp-action="Edit" asp-controller="Bot" asp-route-id="@Model.BotId" class="btn btn-link">Cancel</a>
        </div>
    </div>
</form>

