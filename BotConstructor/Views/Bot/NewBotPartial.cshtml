@model BotConstructor.Web.Models.Bot.BotViewModel

<form asp-action="AddBot" asp-controller="Bot" method="post">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger col-12"></div>
        <div class="form-group col-5 row">
            <label class="col-form-label col-form-label-sm col-4">Token</label>
            <div class="col-8">
                <input asp-for="Token" type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="form-group col-5 row">
            <label class="col-form-label col-form-label-sm col-4">Name</label>
            <div class="col-8">
                <input asp-for="Name" type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-success btn-sm">Create</button>
        </div>
    </div>
</form>
