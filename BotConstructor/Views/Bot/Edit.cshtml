@model BotConstructor.Web.Models.Bot.BotEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit - @Model.Name</h3>
<hr />
<form asp-action="Edit" asp-controller="Bot" method="post" class="mt-3">
    <input asp-for="Id" type="hidden" />
    <div class="row">
        <div class="form-group col-6 row">
            <label class="col-form-label col-form-label-sm col-2">Name</label>
            <div class="col-10">
                <input asp-for="Name" class="form-control form-control-sm" type="text" />
            </div>
        </div>

        <div class="form-group col-6 row">
            <label class="col-form-label col-form-label-sm col-2">Token</label>
            <div class="col-10">
                <input asp-for="Token" class="form-control form-control-sm" type="text" />
            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-success">Save</button>
            <a asp-action="List" asp-controller="Bot" class="btn btn-link">Cancel</a>
        </div>
    </div>
</form>

<h5 class="d-flex justify-content-between mt-3">
    Bot saved Text Messages:
    <a asp-action="Create" asp-controller="Message" asp-route-botId="@Model.Id" class="btn btn-success btn-sm">+</a>
</h5>

<hr />

@foreach(var message in Model.Messages)
{
    <div class="list-group">
        <a asp-action="Edit" asp-controller="Message" asp-route-id="@message.Id" class="list-group-item list-group-item-action">@message.InputMessage</a>
    </div>
}
